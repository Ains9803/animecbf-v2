# ============================================
# AnimeCBF React - Environment Variables
# ============================================
# Copy this file to .env and configure the values as needed
# All variables prefixed with VITE_ are exposed to the client

# ============================================
# API Configuration
# ============================================
# Base URL for the Kitsu API
# Default: https://kitsu.io/api/edge
VITE_API_BASE_URL=https://kitsu.io/api/edge

# ============================================
# App Configuration
# ============================================
# Application name displayed in the UI
# Default: AnimeCBF
VITE_APP_NAME=AnimeCBF

# ============================================
# Optional Configuration
# ============================================
# Page size for API pagination (number of items per page)
# Default: 20
# VITE_PAGE_SIZE=20

# Debounce delay for search in milliseconds
# Default: 500
# VITE_SEARCH_DEBOUNCE_MS=500

# Enable debug mode (shows additional console logs)
# Default: false
# VITE_DEBUG_MODE=false
